<div class='page'>
  <div class='header'>
    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/img/svg/apple.svg'
            alt='Apple'
            class='header__icon'
          />

          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__block'>
          <img
            src='/img/svg/search.svg'
            alt='Search'
            class='header__icon'
          />
          <img
            src='/img/svg/profile.svg'
            alt='Profile'
            class='header__icon'
          />
        </div>

      </header>
    {{/with}}
  </div>

  {{#with iphone_pro}}
    <section
      class='product product--iphone-pro product--dark product--top product--big'
    >
      <div class='product__content'>
        <h2 class='product__title'>{{title}}</h2>
        <p class='product__description'>{{descriptions}}</p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a
                href='../link'
                class='product__link'
              >{{this}}</a>
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}

  {{#with iphone}}
    <section
      class='product product--iphone product--light product--top product--big'
    >
      <div class='product__content'>
        <h2 class='product__title'>{{title}}</h2>
        <p class='product__description'>{{descriptions}}</p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a
                href='../link'
                class='product__link'
              >{{this}}</a>
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}

  <div class='section__double'>
    {{#with trade_in}}
      <section
        class='product product--trade-in product--light product--top product--small'
      >
        <div class='product__content'>
          <h2 class='product__title'>{{title}}</h2>
          <p
            class='product__description'
          >{{descriptions}}</p>
          <div class='product__action'>
            {{#with link}}
              <a
                href='{{link}}'
                class='product__link'
              >{{text}}</a>
            {{/with}}
          </div>
        </div>
      </section>
    {{/with}}

    {{#with conference}}
      <section
        class='product product--conference product--dark product--bottom product--small'
      >
        <div class='product__content'>
          <h2 class='product__title'>{{title}}</h2>
          <p
            class='product__description'
          >{{descriptions}}</p>
          <div class='product__action'>
            {{#with link}}
              <a
                href='{{link}}'
                class='product__link'
              >{{text}}</a>
            {{/with}}
          </div>
        </div>
      </section>
    {{/with}}
  </div>

</div>