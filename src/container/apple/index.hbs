<div class='page'>
  <div class='header'>
    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/img/svg/apple.svg'
            alt='Apple'
            class='header__icon'
          />

          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__block'>
          <img
            src='/img/svg/search.svg'
            alt='Search'
            class='header__icon'
          />
          <img
            src='/img/svg/profile.svg'
            alt='Profile'
            class='header__icon'
          />
        </div>

      </header>
    {{/with}}
  </div>

  <div class='ad__header'>
    {{#with header/ad}}
      <div class='ad__content'>
        {{title}}

        {{#with link}}
          <a
            href='{{url}}'
            class='header__link product__link'
          >{{text}}</a>
        {{/with}}
      </div>
    {{/with}}
  </div>

  {{#with iphone_pro}}
    <section
      class='product product--iphone-pro product--dark product--top product--big'
    >
      <div class='product__content'>
        <h2 class='product__title'>{{title}}</h2>
        <p class='product__description'>{{descriptions}}</p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a
                href='../link'
                class='product__link'
              >{{this}}</a>
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>
  {{/with}}

  {{#with iphone}}
